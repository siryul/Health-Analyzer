<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthAnalyzers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryVariant">@color/actionbar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--LoginActivityTheme 状态栏颜色-->
    <!--    <style name="LoginActivityTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >-->
    <!--        <item name="colorLogin">@color/purple_500</item>-->
    <!--    </style>-->

    <!--自定义 checkbox 样式-->
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox_selector</item>

    </style>

    <!--    登录界面-->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.Bridge">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!--启动页页面-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">#007EF6</item>
        <item name="android:windowFullscreen">true</item>

    </style>
</resources>